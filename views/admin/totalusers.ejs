    <!-- Custom CSS -->
    <style>
        :root {
            --primary-gradient: linear-gradient(120deg, #ffffff 0%, #ffffff 100%);
            --sidebar-gradient: linear-gradient(180deg, #d9fca1 0%, #004916 100%);
            --sidebar-btn-gradient: linear-gradient(90deg, #00910c 0%, #86ff86 100%);
            --sidebar-btn-hover: linear-gradient(90deg, #3dce7c 0%, #7fcbfa 100%);
            --sidebar-bg: #f7fafd;
            --accent: #4a25f0;
            --text-dark: #202a34;
            --text-light: #fff;
            --card-gradient: linear-gradient(135deg, #e3f6f5 0%, #fff 100%);
            --shadow: 0 4px 16px rgba(63,130,255,0.08);
        }
        body {
            font-family: 'Segoe UI', 'Arial', sans-serif;
            background: var(--primary-gradient);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
        }
        /* Disable background animation on mobile for performance */
        @media (prefers-reduced-motion: reduce) or (max-width: 767px) {
            body {
                background: #ffffff; /* Fallback to solid color */
            }
        }
        .navbar {
            background: var(--card-gradient);
            box-shadow: var(--shadow);
            z-index: 1100;
            padding: 0.5rem 1rem;
        }
        .navbar-brand {
            color: var(--accent) !important;
            font-weight: 700;
            letter-spacing: 1px;
            font-size: clamp(1.1rem, 3vw, 1.2rem);
            display: flex;
            align-items: center;
        }
        .navbar-brand img {
            height: 36px;
            margin-right: 8px;
            background: rgb(1, 73, 1);
            border-radius: 6px;
        }
        .navbar .user-greeting {
            color: var(--accent);
            margin: 0;
            font-size: clamp(1rem, 2.5vw, 1.1rem);
        }
        .navbar .user-greeting span {
            color: var(--text-dark);
        }
        .toggle-btn {
            font-size: 1.25rem;
            cursor: pointer;
            color: var(--accent);
            background: #f7fafd;
            border-radius: 6px;
            padding: 6px 10px;
            margin-left: 12px;
            transition: background 0.2s, color 0.2s;
            touch-action: manipulation; /* Improve touch */
        }
        .toggle-btn:hover, .toggle-btn:focus {
            background: var(--accent);
            color: var(--text-light);
        }
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background: var(--sidebar-gradient);
            padding-top: 56px;
            transition: transform 0.3s cubic-bezier(0.4,0.3,0.2,1);
            overflow-x: hidden;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 2px 0 16px rgba(63,130,255,0.10);
        }
        .sidebar::-webkit-scrollbar {
            width: 8px;
            background: #e3f6f5;
        }
        .sidebar::-webkit-scrollbar-thumb {
            background: var(--accent);
            border-radius: 8px;
        }
        .sidebar {
            scrollbar-width: thin;
            scrollbar-color: var(--accent) #e3f6f5;
        }
        .sidebar.collapsed {
            transform: translateX(-100%);
            width: 260px; /* Maintain width for off-canvas */
        }
        .sidebar a,
        .sidebar .collapsible-btn {
            padding: 14px 22px;
            text-decoration: none;
            font-size: clamp(0.95rem, 2.5vw, 1rem);
            color: var(--text-light);
            display: flex;
            align-items: center;
            border-left: 5px solid transparent;
            transition: all 0.2s;
            white-space: nowrap;
            border-radius: 8px;
            margin: 2px 10px;
            background: none;
            touch-action: manipulation;
        }
        .sidebar a:hover,
        .sidebar .collapsible-btn:hover {
            background: var(--sidebar-btn-hover);
            color: var(--text-light);
            border-left: 5px solid var(--accent);
            box-shadow: 0 2px 8px rgba(63,130,255,0.09);
            transform: scale(1.04);
        }
        .sidebar .collapsible-btn {
            background: var(--sidebar-btn-gradient);
            color: var(--text-light);
            border-left: 5px solid var(--accent);
            font-weight: 600;
            margin-bottom: 2px;
            box-shadow: 0 2px 8px rgba(63,130,255,0.07);
        }
        .sidebar .nav-icon {
            margin-right: 12px;
            font-size: clamp(0.95rem, 2.5vw, 1rem);
            width: 23px;
            text-align: center;
            transition: transform 0.2s;
        }
        .sidebar a:hover .nav-icon,
        .sidebar .collapsible-btn:hover .nav-icon {
            transform: scale(1.18);
            color: var(--accent);
        }
        .sidebar.collapsed a .nav-text,
        .sidebar.collapsed .collapsible-btn .nav-text {
            display: inline; /* Keep text for off-canvas */
        }
        .sidebar.collapsed a,
        .sidebar.collapsed .collapsible-btn {
            padding: 14px 22px; /* Consistent padding */
        }
        /* Submenu style */
        .sidebar .collapse {
            background: var(--sidebar-bg) !important;
            border-radius: 0 0 15px 15px;
            box-shadow: 0 2px 10px rgba(63,130,255,0.05);
            margin-bottom: 5px;
            margin-left: 5px;
        }
        .sidebar .collapse .nav-text {
            font-size: clamp(0.85rem, 2vw, 0.9rem);
            color: var(--accent) !important;
        }
        .sidebar .collapse a {
            padding-left: 35px;
            font-size: clamp(0.85rem, 2vw, 0.9rem);
            color: var(--accent) !important;
            border-radius: 7px;
        }
        .sidebar .collapse a .nav-icon {
            font-size: clamp(0.85rem, 2vw, 0.9rem);
            margin-right: 8px;
        }
        .sidebar .collapse a:hover {
            background: #e3f6f5 !important;
            color: #3dce7c !important;
        }
        .main-content {
            margin-left: 260px;
            padding: 70px 24px 24px 24px;
            transition: margin-left 0.3s cubic-bezier(0.4,0.3,0.2,1);
            min-height: 100vh;
        }
        .main-content.collapsed {
            margin-left: 0;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--shadow);
            background: var(--card-gradient);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .card:hover {
            transform: translateY(-4px) scale(1.03);
            box-shadow: 0 8px 24px rgba(63,130,255,0.12);
        }
        .card-title {
            color: var(--accent);
            font-weight: 600;
            font-size: clamp(1.1rem, 3vw, 1.25rem);
        }
        .card-text {
            font-size: clamp(0.9rem, 2.5vw, 1rem);
        }
        .chart-container {
            background: #fff;
            border-radius: 12px;
            box-shadow: var(--shadow);
            padding: 20px;
            margin-bottom: 28px;
            max-width: 100%;
            overflow-x: auto;
        }
        /* Pagination style */
        .pagination {
            margin: 15px 0 0 0;
            justify-content: center;
        }
        .pagination .page-link {
            color: var(--accent);
            background: #e3f6f5;
            border: 1px solid #7fcbfa;
            font-size: clamp(0.85rem, 2vw, 0.9rem);
            padding: 8px 12px;
        }
        .pagination .page-item.active .page-link {
            background: var(--accent);
            color: #fff;
            border-color: var(--accent);
        }
        /* Mobile and Tablet Adjustments */
        @media (max-width: 991.98px) {
            .sidebar {
                transform: translateX(-100%);
                width: 260px;
                box-shadow: none; /* Remove shadow when hidden */
            }
            .sidebar.active {
                transform: translateX(0);
                box-shadow: 2px 0 16px rgba(63,130,255,0.10);
            }
            .main-content,
            .main-content.collapsed {
                margin-left: 0;
                padding-top: 80px;
            }
            .navbar {
