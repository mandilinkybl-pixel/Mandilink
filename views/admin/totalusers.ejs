            }
            .navbar-brand {
                font-size: 1rem;
            }
            .navbar .user-greeting {
                font-size: 0.9rem;
            }
        }
        @media (max-width: 575.98px) {
            .main-content,
            .main-content.collapsed {
                padding: 80px 12px 24px 12px;
            }
            .sidebar {
                width: 80vw; /* Narrower for mobile */
            }
            .sidebar a,
            .sidebar .collapsible-btn {
                padding: 12px 18px;
                font-size: 0.95rem;
            }
            .sidebar .collapse a {
                padding-left: 25px;
                font-size: 0.9rem;
            }
            .card {
                padding: 12px;
            }
            .chart-container {
                padding: 12px;
            }
        }
        /* Overlay for mobile sidebar */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
            opacity: 0;
            transition: opacity 0.3s;
        }
        .sidebar-overlay.active {
            display: block;
            opacity: 1;
        }
    </style>
