<%- include('common/header') %>

<div class="main-content" id="mainContent">
  <div class="container py-5">
    <h1 class="mb-5 text-center fw-bold text-dark">All News</h1>

    <% if (typeof message !== "undefined" && message) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-top:20px;">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (typeof error !== "undefined" && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top:20px;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Filters -->
    <div class="row mb-5">
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="input-group shadow-sm">
          <input type="text" id="searchInput" class="form-control rounded-start" placeholder="Search by title, content, tags, or author..." style="border-color: #e0e0e0;">
          <button class="btn btn-primary rounded-end" type="button" id="searchBtn">Search</button>
        </div>
      </div>

      <div class="col-md-4 mb-3 mb-md-0">
        <div class="input-group shadow-sm">
          <input type="date" id="startDate" class="form-control" placeholder="Start Date" style="border-color: #e0e0e0;">
          <input type="date" id="endDate" class="form-control ms-2" placeholder="End Date" style="border-color: #e0e0e0;">
          <button class="btn btn-primary ms-2 rounded" type="button" id="dateFilterBtn">Filter by Date</button>
        </div>
      </div>

      <div class="col-md-4">
        <select id="categoryFilter" class="form-select shadow-sm">
          <option value="">All Categories</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat._id %>"><%= cat.name %></option>
          <% }) %>
        </select>
      </div>
    </div>

    <% if (blogs.length === 0) { %>
      <div class="alert alert-info text-center shadow-sm">No blogs found.</div>
    <% } %>

    <div class="row g-4" id="blogGrid">
      <% blogs.forEach((blog, index) => { %>
        <div class="col-md-6 col-lg-4 blog-card" 
             data-title="<%= blog.title.toLowerCase() %>" 
             data-content="<%= blog.content.toLowerCase() %>" 
             data-tags="<%= blog.tags.join(',').toLowerCase() %>" 
             data-author="<%= blog.author_doc ? blog.author_doc.name.toLowerCase() : 'unknown' %>" 
             data-date="<%= blog.createdAt.toISOString().split('T')[0] %>"
             data-category="<%= blog.category ? blog.category._id : '' %>">
          <div class="card shadow rounded-3 border-0 h-100" style="transition: transform 0.2s;">
            <!-- Author -->
            <div class="card-header bg-light d-flex align-items-center border-0 p-3">
              <img src="https://ui-avatars.com/api/?name=<%= blog.author_doc ? blog.author_doc.name : 'User' %>&background=random" 
                   class="rounded-circle me-3" width="50" height="50" alt="Author">
              <div>
                <h6 class="mb-0 fw-semibold text-dark"><%= blog.author_doc ? blog.author_doc.name : 'Unknown' %></h6>
                <small class="text-muted"><%= blog.createdAt.toDateString() %></small>
              </div>
            </div>

            <% if (blog.image) { %>
              <img src="<%= blog.image %>" class="card-img-top img-fluid" style="object-fit: cover; height: 250px;" alt="Blog Image">
            <% } %>

            <div class="card-body p-4">
              <h5 class="card-title fw-bold text-dark"><%= blog.title %></h5>
              <p class="card-text text-secondary" style="font-size: 0.95rem;"><%= blog.content %></p>
              <div class="mb-3">
                <% blog.tags.forEach(tag => { %>
                  <span class="badge bg-primary bg-opacity-10 text-primary me-1 mb-1">#<%= tag %></span>
                <% }) %>
              </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between align-items-center border-0 p-3">
              <div class="d-flex align-items-center">
                <button class="btn btn-link text-danger p-0 me-3" data-bs-toggle="modal" data-bs-target="#likesModal<%= index %>">
                  ‚ù§Ô∏è <span><%= blog.likes.length %></span>
                </button>
                <button class="btn btn-link text-muted p-0 me-3" data-bs-toggle="modal" data-bs-target="#commentsModal<%= index %>">
                  üí¨ <span><%= blog.comments.length %></span>
                </button>
                <button class="btn btn-link text-primary p-0">üîó Share</button>
              </div>
              <div>
                <button class="btn btn-sm btn-outline-warning me-2" data-bs-toggle="modal" data-bs-target="#editModal<%= index %>">Edit</button>
                <form action="/admin/blogs/delete/<%= blog._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this blog?')">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal<%= index %>" tabindex="-1" aria-labelledby="editModalLabel<%= index %>" aria-hidden="true">
          <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel<%= index %>">Edit Blog</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/admin/blogs/<%= blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" name="title" value="<%= blog.title %>" class="form-control" required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Content</label>
                    <textarea name="content" rows="5" class="form-control" required><%= blog.content %></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Tags</label>
                    <input type="text" name="tags" value="<%= blog.tags.join(', ') %>" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select">
                      <% categories.forEach(cat => { %>
                        <option value="<%= cat._id %>" <%= blog.category && blog.category._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.name %></option>
                      <% }) %>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label class="form-label">Current Image</label><br>
                    <% if (blog.image) { %>
                      <img src="<%= blog.image %>" width="120" class="mb-2 rounded">
                    <% } else { %>
                      <span class="text-muted">No Image</span>
                    <% } %>
                    <input type="file" name="image" class="form-control mt-2" accept="image/*">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Update Blog</button>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('common/footer') %>

<script>
  const searchInput = document.getElementById('searchInput');
  const searchBtn = document.getElementById('searchBtn');
  const startDateInput = document.getElementById('startDate');
  const endDateInput = document.getElementById('endDate');
  const dateFilterBtn = document.getElementById('dateFilterBtn');
  const categoryFilter = document.getElementById('categoryFilter');
  const blogCards = document.querySelectorAll('.blog-card');

  function filterBlogs() {
    const searchTerm = searchInput.value.toLowerCase();
    const startDate = startDateInput.value;
    const endDate = endDateInput.value;
    const selectedCategory = categoryFilter.value;

    blogCards.forEach(card => {
      const title = card.dataset.title;
      const content = card.dataset.content;
      const tags = card.dataset.tags;
      const author = card.dataset.author;
      const date = card.dataset.date;
      const category = card.dataset.category;

      const matchesSearch = !searchTerm ||
        title.includes(searchTerm) ||
        content.includes(searchTerm) ||
        tags.includes(searchTerm) ||
        author.includes(searchTerm);

      let matchesDate = true;
      if (startDate && date < startDate) matchesDate = false;
      if (endDate && date > endDate) matchesDate = false;

      let matchesCategory = !selectedCategory || category === selectedCategory;

      card.style.display = (matchesSearch && matchesDate && matchesCategory) ? 'block' : 'none';
    });
  }

  searchBtn.addEventListener('click', filterBlogs);
  dateFilterBtn.addEventListener('click', filterBlogs);
  searchInput.addEventListener('input', filterBlogs);
  categoryFilter.addEventListener('change', filterBlogs);

  document.querySelectorAll('.blog-card .card').forEach(card => {
    card.addEventListener('mouseenter', () => card.style.transform = 'scale(1.02)');
    card.addEventListener('mouseleave', () => card.style.transform = 'scale(1)');
  });
</script>
