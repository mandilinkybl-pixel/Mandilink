<%- include('common/header') %>

<div class="main-content" id="mainContent">
    <div class="container-fluid py-5">
        <h1 class="mb-4 text-center text-md-start" style="color:#4e7d29;">Welcome to Mandilink Admin Dashboard <hr></h1>
       

        <!-- Totals Cards -->
        <div class="row g-4 justify-content-center mb-5">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Companies</h5>
                        <h2 class="fw-bold text-success"><%= totalCompanies %></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Users</h5>
                        <h2 class="fw-bold text-success"><%= totalUsers %></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Commodities</h5>
                        <h2 class="fw-bold text-success"><%= totalCommodities %></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Employees</h5>
                        <h2 class="fw-bold text-success"><%= totalEmployees %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Date-wise Charts -->
        <div class="row g-4">
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm p-3">
                    <h5 class="text-center mb-3" style="color:#4e7d29;">Companies Registered Date-wise</h5>
                    <canvas id="companiesChart"></canvas>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm p-3">
                    <h5 class="text-center mb-3" style="color:#4e7d29;">Users Registered Date-wise</h5>
                    <canvas id="usersChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Optional Additional Charts -->
        <div class="row g-4 mt-5">
            <div class="col-12 col-lg-6 chart-container">
                <h5 class="mb-3 text-center" style="color:#4e7d29;">Other Chart Placeholder</h5>
                <canvas id="lineChart"></canvas>
            </div>
            <div class="col-12 col-lg-6 chart-container">
                <h5 class="mb-3 text-center" style="color:#4e7d29;">Other Chart Placeholder</h5>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>
</div>

<%- include('common/footer') %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Companies Date-wise Chart
    const companiesCtx = document.getElementById('companiesChart').getContext('2d');
    new Chart(companiesCtx, {
        type: 'line',
        data: {
            labels: <%- companyDates %>,
            datasets: [{
                label: 'Companies Registered',
                data: <%- companyCounts %>,
                borderColor: '#4e7d29',
                backgroundColor: 'rgba(125,200,80,0.2)',
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: true, labels: { color: '#4e7d29' } } },
            scales: {
                x: { ticks: { color: '#4e7d29' } },
                y: { ticks: { color: '#4e7d29' }, beginAtZero: true }
            }
        }
    });

    // Users Date-wise Chart
    const usersCtx = document.getElementById('usersChart').getContext('2d');
    new Chart(usersCtx, {
        type: 'line',
        data: {
            labels: <%- userDates %>,
            datasets: [{
                label: 'Users Registered',
                data: <%- userCounts %>,
                borderColor: '#7dc850',
                backgroundColor: 'rgba(125,200,80,0.2)',
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: { legend: { display: true, labels: { color: '#4e7d29' } } },
            scales: {
                x: { ticks: { color: '#4e7d29' } },
                y: { ticks: { color: '#4e7d29' }, beginAtZero: true }
            }
        }
    });
</script>
