<%- include('common/header') %>

<div class="main-content" id="mainContent">
  <div class="container-fluid p-4">
    <h2>User Complaints</h2>

    <div class="row mb-3">
      <div class="col-md-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by ticket, subject...">
      </div>
      <div class="col-md-3">
        <input type="date" id="dateFilter" class="form-control">
      </div>
      <div class="col-md-3">
        <select id="statusFilter" class="form-select">
          <option value="">All Status</option>
          <option value="open">Open</option>
          <option value="in-progress">In Progress</option>
          <option value="resolved">Resolved</option>
          <option value="closed">Closed</option>
        </select>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Ticket #</th>
            <th>User</th>
            <th>Subject</th>
            <th>Category</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="complaintsTable">
          <% complaints.forEach(c => { %>
            <tr>
              <td><%= c.ticketNumber %></td>
              <td>
                <%= c.user?.name %><br>
                <small><%= c.user?.email %></small>
              </td>
              <td><%= c.subject %></td>
              <td><%= c.category %></td>
              <td><%= c.status %></td>
              <td><%= c.priority %></td>
              <td><%= c.createdAt.toLocaleDateString() %></td>
              <td>
                <a href="/admin/support/view/<%= c._id %>" class="btn btn-sm btn-info">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  const searchInput = document.getElementById("searchInput");
  const statusFilter = document.getElementById("statusFilter");
  const dateFilter = document.getElementById("dateFilter");
  const tableRows = document.querySelectorAll("#complaintsTable tr");

  function filterRows() {
    const search = searchInput.value.toLowerCase();
    const status = statusFilter.value;
    const date = dateFilter.value;

    tableRows.forEach(row => {
      let text = row.innerText.toLowerCase();
      let rowDate = new Date(row.cells[6].innerText).toISOString().split('T')[0];
      let match = text.includes(search);
      if (status && row.cells[4].innerText !== status) match = false;
      if (date && rowDate !== date) match = false;
      row.style.display = match ? '' : 'none';
    });
  }

  searchInput.addEventListener("input", filterRows);
  statusFilter.addEventListener("change", filterRows);
  dateFilter.addEventListener("change", filterRows);
</script>

<%- include('common/footer') %>
