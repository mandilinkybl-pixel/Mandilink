<%- include('common/header') %>
<!-- Main Content -->
<div class="main-content" id="mainContent">
   <div class="container-fluid">
    <form action="/admin/employees/create-employee" method="POST" style="background: #fff; border-radius: 16px; box-shadow: 0 6px 24px rgba(31,38,135,0.13); padding: 32px 24px; max-width: 700px; margin:auto;">
      <h2 style="text-align:center; color:#6c63ff; font-weight:700; margin-bottom:28px;">Create Employee</h2>
      <div style="display: flex; flex-wrap: wrap; gap: 16px;">
        <div style="flex:1 1 45%;">
          <label style="font-weight:500; color:#223;">Name</label>
          <input type="text" name="name" style="width:100%; border-radius:8px; border:1px solid #ccc; padding:8px 12px; margin-bottom:16px;" required>
        </div>
        <div style="flex:1 1 45%;">
          <label style="font-weight:500; color:#223;">Email</label>
          <input type="email" name="email" style="width:100%; border-radius:8px; border:1px solid #ccc; padding:8px 12px; margin-bottom:16px;" required>
        </div>
        <div style="flex:1 1 45%;">
          <label style="font-weight:500; color:#223;">Mobile</label>
          <input type="text" name="mobile" style="width:100%; border-radius:8px; border:1px solid #ccc; padding:8px 12px; margin-bottom:16px;" required>
        </div>
        <div style="flex:1 1 45%;">
          <label style="font-weight:500; color:#223;">Password</label>
          <input type="password" name="password" style="width:100%; border-radius:8px; border:1px solid #ccc; padding:8px 12px; margin-bottom:16px;" required>
        </div>
        <div style="flex:1 1 45%;">
          <label style="font-weight:500; color:#223;">Role</label>
          <select name="role" style="width:100%; border-radius:8px; border:1px solid #ccc; padding:8px 12px; margin-bottom:16px;">
            <option value="employee" selected>Employee</option>
            <option value="admin">Admin</option>
          </select>
        </div>
      </div>

      <div style="margin-bottom:16px;">
        <label style="font-weight:500; color:#223; display:block; margin-bottom:4px;">Access Rights</label>
        <div style="display:flex; flex-wrap:wrap; gap:10px 28px;">
          <% [
            ["Manage_Users","Manage Users"],
            ["Manage_Roles","Manage Roles"],
            ["Manage_Admin","Manage Admin"],
            ["Manage_CallLogs","Manage Call Logs"],
            ["Manage_SupportTickets","Manage Support Tickets"],
            ["Manage_Reports","Manage Reports"],
            ["Manage_Settings","Manage Settings"],
            ["Manage_Ads_Top","Manage Ads Top"],
            ["Manage_Ads_Bottom","Manage Ads Bottom"],
            ["Manage_Ads_Side","Manage Ads Side"],
            ["Manage_Ads_Sponsored","Manage Ads Sponsored"],
            ["Manage_Jobs","Manage Jobs"],
            ["Manage_Blogs","Manage Blogs"],
            ["Manage_Analytics","Manage Analytics"],
            ["Manage_MandiRates","Manage Mandi Rates"],
            ["Manage_PushNotifications","Manage Push Notifications"],
            ["Manage_Plans","Manage Plans"],
            ["Manage_Payments","Manage Payments"],
            ["Manage_CompanyList","Manage Company List"],
            ["Manage_Commodities","Manage Commodities"],
            ["Manage_Mandis","Manage Mandis"],
            ["Manage_Categories","Manage Categories"],
            ["Manage_UsersList","Manage Users List"]
          ].forEach(([code, label]) => {%>
            <label style="display:inline-flex; align-items:center; gap:6px;">
              <input type="checkbox" name="access[]" value="<%= code %>"> <%= label %>
            </label>
          <% }) %>
        </div>
        <small style="color:#888; font-size:0.97em;">Select all that apply.</small>
      </div>

      <div style="margin-bottom:24px;">
        <label style="font-weight:500; color:#223; display:block; margin-bottom:4px;">Block Employee</label>
        <label style="margin-right:18px;"><input type="radio" name="isBlocked" value="false" checked style="margin-right:4px;"> No</label>
        <label><input type="radio" name="isBlocked" value="true" style="margin-right:4px;"> Yes</label>
      </div>

      <div style="display:flex; gap:12px; justify-content: flex-end;">
        <button type="submit" style="border:none; border-radius:8px; background:linear-gradient(90deg,#6c63ff 50%,#48c6ef 100%); color:#fff; font-weight:600; padding:10px 32px; font-size:1rem; cursor:pointer;">Create Employee</button>
        <a href="/admin/employees" style="background:#eee; color:#333; border-radius:8px; padding:10px 32px; text-decoration:none; font-weight:500; border:1px solid #ddd;">Cancel</a>
      </div>
    </form>
   </div>
</div>

<%- include('common/footer') %>