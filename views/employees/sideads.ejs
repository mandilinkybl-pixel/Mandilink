<%- include('layout/header') %>
    <!-- Main Content -->
    <div class="main-content" id="mainContent">
          
<h2 class="mb-4"style="margin-top: 20px; margin-bottom: 20px; text-align: center; color: #6c63ff;">Side Ads</h2>


  <!-- Search -->
  <input type="text" id="searchInput" class="form-control mb-4" placeholder="Search ads by title...">

  <div class="row" id="adsContainer">
    <% ads.forEach((ad) => { %>
      <div class="col-md-4 mb-4 ad-card" data-title="<%= ad.title.toLowerCase() %>">
        <div class="card shadow-sm">
          <img src="/uploads/ads/<%= ad.image %>" class="card-img-top" alt="<%= ad.title %>" style="height:200px; object-fit:cover;">
          <div class="card-body">
            <h5 class="card-title"><%= ad.title %></h5>
            <p class="card-text">
              <strong>Type:</strong> <%= ad.type %><br>
              <strong>Active:</strong> <%= ad.isActive ? "Yes" : "No" %><br>
              <strong>Start:</strong> <%= ad.startDate.toDateString() %><br>
              <% if(ad.endDate) { %>
                <strong>End:</strong> <%= ad.endDate.toDateString() %><br>
              <% } %>
            </p>
            <a href="<%= ad.link %>" target="_blank" class="btn btn-sm btn-success">Visit Link</a>
            <button 
              class="btn btn-sm btn-primary editBtn"
              data-id="<%= ad._id %>"
              data-title="<%= ad.title %>"
              data-image="<%= ad.image %>"
              data-link="<%= ad.link %>"
              data-type="<%= ad.type %>"
              data-active="<%= ad.isActive %>"
              data-start="<%= ad.startDate.toISOString().split('T')[0] %>"
              data-end="<%= ad.endDate ? ad.endDate.toISOString().split('T')[0] : '' %>"
              data-bs-toggle="modal" data-bs-target="#editAdModal">
              Edit
            </button>
            <!-- delete button -->
            <a href="/employees/ads/delete/<%= ad._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this ad?');">Delete</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editAdModal" tabindex="-1" aria-labelledby="editAdModalLabel" aria-hidden="true" style="padding-top: 50px;">
  <div class="modal-dialog">
    <form id="editAdForm" method="POST" enctype="multipart/form-data">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editAdModalLabel">Edit Ad</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="id" id="editAdId">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="title" id="editTitle" class="form-control" required>
          </div>

          <!-- Current Image Preview -->
          <div class="mb-3">
            <label class="form-label">Current Image</label><br>
            <img id="currentImagePreview" src="" alt="Current Ad Image" class="img-thumbnail mb-2" style="max-width: 200px;">
          </div>

          <!-- Upload New Image -->
          <div class="mb-3">
            <label class="form-label">Change Image</label>
            <input type="file" name="image" id="editImage" class="form-control" accept="image/*">
          </div>

          <!-- Link -->
          <div class="mb-3">
            <label class="form-label">Link</label>
            <input type="url" name="link" id="editLink" class="form-control" required>
          </div>

          <!-- Type -->
          <div class="mb-3">
            <label class="form-label">Type</label>
            <select name="type" id="editType" class="form-select" required>
              <option value="Top">Top</option>
              <option value="Bottom">Bottom</option>
              <option value="Sponsored">Sponsored</option>
              <option value="Side">Side</option>
            </select>
          </div>

          <!-- Active -->
          <div class="mb-3">
            <label class="form-label">Active</label>
            <select name="isActive" id="editActive" class="form-select">
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>
          </div>

          <!-- Start Date -->
          <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" name="startDate" id="editStart" class="form-control">
          </div>

          <!-- End Date -->
          <div class="mb-3">
            <label class="form-label">End Date</label>
            <input type="date" name="endDate" id="editEnd" class="form-control">
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </form>
  </div>
</div>
    </div>
    <script>
  // Search Functionality
  document.getElementById("searchInput").addEventListener("keyup", function () {
    let query = this.value.toLowerCase();
    document.querySelectorAll(".ad-card").forEach(function (card) {
      card.style.display = card.dataset.title.includes(query) ? "block" : "none";
    });
  });

  // Fill modal with data
// Fill modal with data
document.querySelectorAll(".editBtn").forEach(button => {
  button.addEventListener("click", () => {
    document.getElementById("editAdId").value = button.dataset.id;
    document.getElementById("editTitle").value = button.dataset.title;
    document.getElementById("editLink").value = button.dataset.link;
    document.getElementById("editType").value = button.dataset.type;
    document.getElementById("editActive").value = button.dataset.active;
    document.getElementById("editStart").value = button.dataset.start;
    document.getElementById("editEnd").value = button.dataset.end;

    // show current image
    document.getElementById("currentImagePreview").src = "/uploads/ads/" + button.dataset.image;

    // set form action for update
    document.getElementById("editAdForm").action = "/employees/ads/update/" + button.dataset.id;
  });
});

</script>

