        <% } %>
        <% if (access.includes("Manage_CompanyList")) { %>
            <a href="/employees/companylist"><i class="fas fa-building nav-icon"></i><span class="nav-text">Manage Company List</span></a>
        <% } %>
        <% if (access.includes("Manage_Mandis")) { %>
            <a href="/employees/mandis"><i class="fas fa-box nav-icon"></i><span class="nav-text">Manage Mandis</span></a>
        <% } %>
        <% if (access.includes("Manage_Categories")) { %>
            <a href="/employees/category"><i class="fas fa-th-list nav-icon"></i><span class="nav-text">Manage Categories</span></a>
        <% } %>
        <a href="/employees/auth/logout"><i class="fas fa-sign-out-alt nav-icon"></i><span class="nav-text">Logout</span></a>
    </div>
