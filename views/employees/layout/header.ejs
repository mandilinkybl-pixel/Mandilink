            </div>
            <span class="toggle-btn ms-3" id="sidebarToggle"><i class="fas fa-bars"></i></span>
        </div>
    </nav>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

